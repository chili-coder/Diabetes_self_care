<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiabetesSelfCare" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="AlertDialog.Theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarStyle">@style/AlertDialog.ButtonBar</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="dialogPreferredPadding">@dimen/dialogPreferredPadding</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.TitleText</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/AlertDialog.TitlePanel</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.BodyText</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorPrimary">@color/purple_700</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/purple_700</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="toolbarStyle">@style/Widget.MedDose.Toolbar</item>

    </style>

    <style name="Theme.DiabetesSelfCare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DiabetesSelfCare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DiabetesSelfCare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>